# Configuration for large datasets (production/HPC)
# Suitable for machines with >1TB RAM

# Java memory settings (adjust based on available RAM)
ROBOT_JAVA_ARGS=-Xmx900g
_JAVA_OPTIONS=-Xmx900g

# Dataset configuration
DATASET_SIZE=large
ONTOLOGIES_TO_MERGE=all

# Processing options
ENABLE_REASONING=true
ENABLE_MATERIALIZATION=true
MAX_ONTOLOGY_SIZE_MB=50000

# Output options
OUTPUT_FORMAT=owl,db,tsv,parquet
COMPRESS_OUTPUT=true

# Performance tuning
PARALLEL_DOWNLOADS=10
BATCH_SIZE=100

# Memory monitoring
MONITOR_MEMORY=true
MEMORY_LOG_INTERVAL=60