# Configuration for small datasets (local development)
# Suitable for machines with 8-32GB RAM

# Java memory settings
ROBOT_JAVA_ARGS=-Xmx4g
_JAVA_OPTIONS=-Xmx4g

# Dataset configuration
DATASET_SIZE=small
ONTOLOGIES_TO_MERGE=chebi,go,envo,iao,bfo,ro,omo

# Processing options
ENABLE_REASONING=false
ENABLE_MATERIALIZATION=false
MAX_ONTOLOGY_SIZE_MB=500

# Output options
OUTPUT_FORMAT=owl
COMPRESS_OUTPUT=false

# Performance tuning
PARALLEL_DOWNLOADS=2
BATCH_SIZE=10