# CDM Ontologies Order Testing Environment Configuration
# Subset configuration for testing merge orders locally

# Test Configuration
DATASET_SIZE=test
ONTOLOGIES_SOURCE_FILE=ontologies_source_test.txt

# Memory Configuration (reduced for local testing)
ROBOT_JAVA_ARGS=-Xmx16g -XX:MaxMetaspaceSize=2g -XX:+UseG1GC
RELATION_GRAPH_JAVA_ARGS=-Xmx16g -XX:MaxMetaspaceSize=2g -XX:+UseG1GC

# Tool Memory Limits (reduced)
SEMSQL_MEMORY_LIMIT=16g
PYTHON_MEMORY_LIMIT=16g

# Performance Tuning
JAVA_PARALLEL_GC=true
ENABLE_MEMORY_MONITORING=false

# Output Configuration
ENABLE_TSV_EXPORT=false
ENABLE_PARQUET_EXPORT=false
CREATE_UTILS_LOGS=false

# Skip resource checks in containerized environment
SKIP_RESOURCE_CHECK=true