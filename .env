# CDM Ontologies Pipeline Environment Configuration
# High-memory configuration suitable for both small and large datasets

# Dataset Configuration
DATASET_SIZE=large
ONTOLOGIES_SOURCE_FILE=ontologies_source.txt

# Memory Configuration (Ultra-high settings for production datasets - 680GB+ peak usage)
ROBOT_JAVA_ARGS=-Xmx1024g -XX:MaxMetaspaceSize=32g -XX:+UseG1GC
RELATION_GRAPH_JAVA_ARGS=-Xmx512g -XX:MaxMetaspaceSize=16g -XX:+UseG1GC

# Tool Memory Limits (for 19+ hour runtimes)
SEMSQL_MEMORY_LIMIT=256g
PYTHON_MEMORY_LIMIT=32g

# Performance Tuning
JAVA_PARALLEL_GC=true
ENABLE_MEMORY_MONITORING=true

# Output Configuration
ENABLE_TSV_EXPORT=true
ENABLE_PARQUET_EXPORT=true
CREATE_UTILS_LOGS=true